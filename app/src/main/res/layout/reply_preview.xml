<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reply_prev_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/reply_prev_frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80E0E0E0"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/reply_text_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="144dp"
                android:textStyle="bold"
                tools:text="Cyril" />

            <TextView
                android:id="@+id/reply_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minWidth="144dp"
                tools:text="Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/replyClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|end|top"
        android:padding="6dp"
        android:src="@drawable/close" />
</FrameLayout>
