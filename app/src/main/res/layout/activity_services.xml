<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_square"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn1"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:padding="16dp"
                android:src="@drawable/left" />

            <TextView
                android:id="@id/activitytitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center"
                android:singleLine="true"
                android:text="Service Providers."
                android:textColor="@color/actual_white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/transparent"
                android:padding="16dp"
                android:src="@drawable/reload"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Mechanics"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:background="@color/white"
            android:gravity="center"
            android:padding="16dp"
            android:text="Lease Images"
            android:textAlignment="center"
            android:textColor="#A17E24"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="3"
            tools:listitem="@layout/recycle_rated_service" />

    </LinearLayout>

</RelativeLayout>