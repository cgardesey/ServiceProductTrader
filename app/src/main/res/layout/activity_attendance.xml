<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_square"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:padding="16dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:ellipsize="start"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/attendance"
                android:textColor="@color/actual_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/transparent"
                android:padding="16dp"
                android:src="@drawable/reload" />

        </LinearLayout>

        <TextView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:background="@color/white"
            android:padding="16dp"
            android:text="My Recent Attendance"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#A17E24"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mydetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:background="@color/actual_white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/teachername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"

                android:text="@string/mypayments"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newcreatecourselayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textSize="34sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="You have no recorded attendance yet"
                android:textSize="16sp" />

            <Button
                android:id="@+id/backbtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@drawable/roundededittext"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="@string/back" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            tools:listitem="@layout/recycle_attendance"
            tools:itemCount="3"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/noattendancetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="You currently have no attendance. \n\nClick on the refresh icon at the top right corner to check for newly added attendance" />

    </LinearLayout>



</RelativeLayout>